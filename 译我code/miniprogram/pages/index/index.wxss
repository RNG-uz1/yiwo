.box{
  width: 100%;
  height: 100%;
}

.top{
  width: 100%;
  height: 30%;
  position: absolute;
}

.mid{
  position: absolute;
  width: 100%;
  height: 80%;
  border-radius: 30px;
  box-shadow: 0px -2px 10px 2px rgba(0, 0, 0, 0.2);
  bottom: 0;
  overflow: hidden;
}

.start{
  position: absolute;
  width: 70px;
  height: 180px;
  margin-top: 25%;
  margin-left: 15%;
  border-radius: 30px;
  box-shadow: 3px 3px 5px 2px rgba(0, 0, 0, 0.4);
}

.photo{
  width: 100%;
  height: 100%;
}