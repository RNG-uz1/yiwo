map {
  height: 70%;
  width: 100%;
}

.back{
  position: absolute;
  z-index: 2;
  width: 70rpx;
  height: 70rpx;
  left: 15rpx;
  margin-top: 15rpx;
}

.description {
  height: 30%;
  width: 100%;
}
.description .time {
  margin-top: 30rpx;
  margin-left: 30rpx;
  line-height: 40rpx;
  font-size: 35rpx;
}

.description .des {
  margin-top: 30rpx;
  margin-left: 30rpx; 
  margin-right: 30rpx;
  font-size: 35rpx;
}

.description .time .time-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.description .des .des-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.pop{
  width: 100%;
  height: 400rpx;
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pop .border {
  padding-bottom: 15rpx;
  width: 80%;
  border-bottom:2rpx solid rgba(0, 0, 0);
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.pop .popTitle {
  font-size: 30rpx;
}

.input{
  background-color: #f8f8f8;
}