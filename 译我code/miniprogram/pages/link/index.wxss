page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

map {
  height: 70%;
  width: 100%;
}

.back{
  position: absolute;
  z-index: 2;
  width: 70rpx;
  height: 70rpx;
  left: 15rpx;
  margin-top: 15rpx;
}

.description {
  height: 30%;
  width: 100%;
  padding-left: 20rpx;
}
.description .time {
  margin-top: 30rpx;
  margin-left: 30rpx;
  line-height: 40rpx;
  font-size: 35rpx;
}

.description .des {
  margin-top: 30rpx;
  margin-left: 30rpx; 
  margin-right: 30rpx;
  font-size: 35rpx;
}

.description .time .time-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.description .des .des-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.pop{
  width: 100%;
  height: 400rpx;
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pop .border {
  padding-bottom: 15rpx;
  width: 80%;
  border-bottom:2rpx solid rgba(0, 0, 0);
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 15rpx;
}

.del{
  bottom: 25rpx;
  right: 25rpx;
  position: absolute;
  height: 60rpx;
  width: 60rpx;
}

.backGround{
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(0,0,0,0.5);
}

.content {
  margin-top: 15%;
  height: 70%;
  width: 80%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .close {
  margin-top: 30rpx;
  width: 70rpx;
  height: 70rpx;
}
image.close-album{
  margin-top: 40rpx;
  width: 70rpx;
  height: 70rpx;
}

image.album_photo{
  height: 85%;
  width: 100%;
}

.content .currentPhoto{
  height: 85%;
  width: 100%;
}

.des text {
  width: 95%;
}

.album{
  top: 75rpx;
  right: 25rpx;
  position: absolute;
  height: 180rpx;
  width: 180rpx;
}

swiper{
  margin-top: 15%;
  height: 70%;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

indicator-dots{
  margin-top: 20rpx;
}
