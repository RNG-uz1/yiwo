.box{
  width: 100%;
  height: 100%;
}

.top{
  width: 100%;
  height: 50%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mid{
  position: absolute;
  width: 100%;
  height: 70%;
  border-radius: 30px;
  box-shadow: 0px -2px 10px 2px rgba(0, 0, 0, 0.2);
  bottom: 0;
  overflow: hidden;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userInfo{
  position: absolute;
  z-index: 99;
  margin-top: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.touxiang{
  width: 90px;
  height: 90px;
  border-radius: 50%;
}

.photo{
  width: 100%;
  height: 100%;
}

.userName{
  margin-top: 15px;
  color: #fff;
  font-size: large;
}

.login_button{
  position: absolute;
  margin-top: 35%;
  width: 25%;
  border-radius: 30px;
  height: 50px;
  font-weight: 200;
  font-size: larger;
  color: #189f9c;
  box-shadow: 0px 3px 10px 1px rgb(105, 105, 105);
}

.midTop{
  width: 90%;
  height: 15%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 20px;
}
.item{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item text{
  bottom: 5px;
}

.icon{
  width: 60px;
  height: 60px;
}

.icon2{
  margin-top: 8px;
  width: 51px;
  height: 51px;
}
.list{
  width: 100%;
  margin-top: 20px;
}

 .li{
  border-top: 1px solid #cccbcb;
  width: 100% !important;
  margin-left: 0 !important;
  padding: 0 !important;
  background-color: #fff !important;
  height: 70px;
  display: flex;
  font-weight: normal !important;
  flex-direction: row;
  align-items: center;
}


.icon3{
  margin-left: 40px;
  width: 35px;
  height: 35px;
}

.li text{
  font-size: 20px;
  margin-left: 15px;
}
