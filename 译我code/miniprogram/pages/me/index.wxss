.introduce {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0);
  margin-bottom: 100rpx;
}

.login_button {
  margin-top: 40%;
  margin-bottom: 30%;
}

.userHead {
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
  margin-bottom: 50rpx;
}

.nickName {
  margin: 20rpx 0;
  font-size: 35rpx;
}

.myTag {
  height: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 75%;
  position: relative;
}

.myTag .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.myTag .title .iconTag {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.myTag .title .text{
  font-size: 35rpx;
}

.myTag .tags {
  position: absolute;
  padding-left: 20rpx;
  padding-right: 20rpx;
  width: 100%;
  height: 80%;
  bottom: 0rpx;
  border-radius: 40rpx;
  background-color: rgba(0,0,0,0.05);
}
