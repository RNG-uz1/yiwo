
.introduce {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 120rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0);
  margin-bottom: 100rpx;
}

.login_button {
  margin-top: 40%;
  margin-bottom: 30%;
}

.userHead {
  height: 250rpx;
  width: 250rpx;
  border-radius: 50%;
  margin-bottom: 50rpx;
}

.nickName {
  margin: 20rpx 0;
  font-size: 35rpx;
}

.myTag {
  height: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 75%;
  position: relative;
}

.myTag .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.myTag .title .iconTag {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.myTag .title .text{
  font-size: 35rpx;
}

.myTag .tags {
  position: absolute;
  padding-left: 20rpx;
  width: 100%;
  height: 80%;
  bottom: 0rpx;
  border-radius: 40rpx;
  background-color: rgba(0,0,0,0.05);
}

.myTag .tags .tag {
  display: flex;
  color: #fff;
  margin: 30rpx;
  width: 200rpx;
  height: 50rpx;
  background-color: #FFB26B;
  border-radius: 20rpx;
  font-size: 40rpx;
  justify-content: center;
  line-height: 50rpx;
}

.myTag .tags .addTags{
  position: absolute;
  right: 25rpx;
  bottom: 25rpx;
  width: 150rpx;
  height: 150rpx;
}

.watchMakesMe {
  display: flex;
  margin-top: 150rpx;
  background-color: #099A97;
  height: 80rpx;
  width: 40%;
  border-radius: 40rpx;
  line-height: 80rpx;
  color: #fff;
  justify-content: center;
  box-shadow: 3px 3px 5px 5px rgba(31, 29, 29, 0.062);
}

.feedBack {
  margin: 0;
  position: absolute;
  bottom: 35rpx;
  font-weight: normal;
  background-color:  rgba(21,250,168,0.1);
  padding: 0;
  width: 150rpx !important;
}

.feedBack :after {
  content: none;
}

.feedBack::after{
  border:none;
}

.pop {
  height: 45%;
  width: 90%;
}