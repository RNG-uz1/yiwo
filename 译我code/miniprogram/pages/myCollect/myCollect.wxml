<!--pages/myCollect/myCollect.wxml-->

<!-- 底部容器 -->
<view class="content_box">
    <!-- 文章 -->
    <!-- article容器**************begin -->
    <view class="article_container">
        <!-- 文章内容content容器*****wx:for循环**************begin -->
        <view class="article_list" wx:for="{{listArr}}" wx:key="index">
            <!-- 文章内容wx:if判断攻略文章是否已审核************begin -->
            <view class="article_for">

                <!-- 点击文章跳转***********begin -->
                <view class="article_content" bindtap="gotoGuideArticle" data-info="{{item.guide_id}}">
                    <!-- 文章缩略图****************begin -->
                    <view class="article_content_img">
                        <image class="img" mode="aspectFill" src="{{item.collecttopImage}}" />
                    </view>
                    <!-- 文章缩略图****************end -->
                    <!-- 文章内容****************************************begin -->
                    <view class="article_content_text">
                        <!-- 文章标题-->
                        <view class="article_title">{{item.collecttitle}}</view>
                        <!-- 文章信息 -->
                        <view class="article_info">
                            <rich-text nodes="{{item.collectcontent}}"></rich-text>
                        </view>
                        <!-- 文章内容****************************************end -->
                    </view>
                    <!-- 点击文章跳转***********end -->
                </view>
                <!-- 文章内容wx:if判断攻略文章是否已审核************end -->
            </view>
            <!-- 文章内容content容器*****wx:for循环**************end -->
        </view>

        <!-- article容器**************end -->
    </view>

</view>

<view wx:if="{{unloading==true}}" class="cu-load bg-grey {{'over'}}" style="width: 100%;height: 80rpx;"></view> <!-- 处理内容到底部情况 -->
