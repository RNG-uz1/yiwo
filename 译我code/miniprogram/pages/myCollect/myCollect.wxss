/**底部容器------------------begin*/
.content_box {
    position: relative;
    width: 100%;
    height: auto;
    background-color: white;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
}

/**底部容器------------------end*/







/**********文章页******begin**********/
.article_container{
    margin-top: 60rpx;
}
.article_content {
    padding: 30rpx;
    margin-bottom: 60rpx;
    width: 100%;
    height: 320rpx;
    border-radius: 35rpx;
    border: 1rpx solid #bbb6b365;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.226);
    display: flex;
}

.article_content_img {
    width: 250rpx;
    height: 250rpx;
}

.img {
    width: 100%;
    height: 100%;
}

.article_content_text {
    margin-left: 20rpx;
    width: 350rpx;
    height: 270rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
    padding: 5rpx;
}

.article_title {
    margin-top: -15rpx;
    font-size: 45rpx;
    font-family: cursive;
    /**多行文本超出begin*/
    display: -webkit-box;
    /*设置为弹性盒子*/
    -webkit-line-clamp: 2;
    /*最多显示2行*/
    overflow: hidden;
    /*超出隐藏*/
    text-overflow: ellipsis;
    /*超出显示为省略号*/
    -webkit-box-orient: vertical;
    word-break: break-all;
    /*强制英文单词自动换行*/
    /**多行文本超出end*/
}

.article_info {
    display: -webkit-box;
    word-break: break-all;

    font-size: 30rpx;
    font-family: cursive;
    color: #888;
    /**多行文本超出begin*/
    display: -webkit-box;
    /*设置为弹性盒子*/
    -webkit-line-clamp: 3;
    /*最多显示3行*/
    overflow: hidden;
    /*超出隐藏*/
    text-overflow: ellipsis;
    /*超出显示为省略号*/
    -webkit-box-orient: vertical;
    word-break: break-all;
    /*强制英文单词自动换行*/
    /**多行文本超出end*/
}

/**********文章页******end**********/

/**********触底刷新********* begin**********/
/*外层容器，防止穿透点击*/
.canui-load{
    position:fixed;
    width: 100%;
    height: 100%;
    top:0;
    left:0;
    background: rgba(0, 0, 0, 0.5);
    z-index:99999;
}
/*关闭设置的阴影层，关闭底部距离，让它居中*/
.canui-load .cu-load.load-modal{
    box-shadow:inherit;
    bottom:0;
}
/*修改加载圈圈颜色*/
.canui-load .cu-load.load-modal::after{
    border-left: 6rpx solid #0081ff;
}
/**********触底刷新********* end**********/