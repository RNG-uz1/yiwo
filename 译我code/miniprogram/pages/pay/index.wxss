.base_color {
  color: #25c2bf;
}

.base_line_10rpx {
  width: 100%;
  height: 10rpx;
  background: #f4f4f4;
}

page {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}


/* 订单明细 */
.mingxi_title {

  margin-top: 20rpx;
  padding: 14rpx 15rpx 10rpx;
  font-size: 55rpx;

  color: #25c2bf;
}

.mingxi_item {
  margin-top: 30rpx;
  justify-content: space-around;
  width: 80%;
  margin-left: 30rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid gainsboro;
  font-size: 36rpx;
}

.good_name {
  font-size: 34rpx;
  /* 超过12个字省略号 */
  font-weight: normal;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
  word-wrap: break-word;
  word-break: break-all;
}

.beizhu {
  width: 90%;
}

.address {
  width: 90%;
  margin-top: 30rpx;
}

/* 地址 */

.title {
  margin-top: 30rpx;
  width: 85%;
  font-size: 40rpx;
}

.desc {
  font-size: 30rpx;
}

.item_address {
  padding-left: 10pt;
  padding-right: 10pt;
  padding-top: 5pt;
}

.address_name,
.address_phone {
  font-size: 15pt;
  padding-right: 8pt;
  color: black;
}

.address_desc {
  float: left;
  color: black;
  margin-top: 3pt;
  margin-bottom: 10pt;
}



/* 总价 */
.zongjia {
  margin-top: 40rpx;
  color: #25c2bf;
  text-align: right;
  font-size: 45rpx;
  padding: 10rpx 30rpx;
}

/* 输入框样式 */
input {
  padding: 20rpx;
  border-bottom: 1px solid gainsboro;
}

/*弹窗遮罩层  */

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
  background: #000;
  z-index: 666;
}

/*选择支付方式弹窗  */
.cart_popup {
  width: 100%;
  height: 285px;
  background: #fff;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: -285px;
  overflow: auto;
}

.shopcart_title {
  width: 100%;
  height: 75rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  left: 0;
  background-color: #25c2bf;
  color: #fff;
}

/*返回按钮  */
.shopcart_close {
  position: absolute;
  right: 30rpx;
  font-size: 28rpx;
}


/*模拟支付  */

.cart_cells {
  width: 100%;
  height: 98rpx;
  position: relative;
  border-bottom: 1px #dedede solid;
}

.cells_name {
  padding-left: 20rpx;
  width: 50%;
  position: absolute;
  left: 0;
  top: 20rpx;
}

.price-box {
  width: 40%;
  font-size: 32rpx;
  position: absolute;
  left: 60%;
  top: 20rpx;
  color: #25c2bf;
}



/* 总计金额、件数  */
.all_money {
  position: absolute;
  width: 80% !important;
  bottom: 60rpx !important;
  height: 84rpx !important;
  text-align: center !important;
  color: #fff;
  font-size: 32rpx;
  background-color: #25c2bf;
  border-radius: 20rpx;
}