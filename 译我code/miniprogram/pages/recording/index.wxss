.recording {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  align-items: center;
  background-color: #055;
}

map {
  height: 100%;
  width: 100%;
}

.map{
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.floatBtns {
  width: 100%;
  justify-content: space-around;
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  bottom: 200rpx;
}

.floatBtns .btn {
  display: flex;
  justify-content: center;
  background-color: #099A97;
  border-radius: 30rpx;
  line-height: 60rpx;
  color: #fff;
  width: 250rpx;
  height: 60rpx;
}

.pop{
  width: 100%;
  height: 400rpx;
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chose{
  width: 100%;
  height: 250rpx;
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.chose .onlyPoint{
  height: 60rpx;
  width: 80%;
  font-size: 32rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.chose .pointAndPhoto{
  padding-top: 20rpx;
  font-size: 32rpx;
  height: 60rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pop .popTitle {
  margin-bottom: 50rpx;
}

.pop .end{
  border-top: 2rpx solid rgba(0, 0, 0);
  width: 80%;
  margin-top: 20rpx;
  padding-top: 30rpx;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
}


.end_icon{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}

.backGround{
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(0,0,0,0.7);
}

.swiper{
  margin-top: 15%;
  height: 80%;
  width: 90%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

swiper {
  width: 100%;
  height: 100%;
}


.content {
  margin-top: 15%;
  height: 70%;
  width: 80%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-box{
  width: 90%;
  height: 120rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-around;
}

.btn{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-icon {
  margin-top: 30rpx;
  width: 70rpx;
  height: 70rpx;
}

.btn-des {
  color: #fff;
}


.currentPhoto{
  height: 95%;
  width: 95%;
  padding-right: 5rpx;
  padding-left: 5rpx;
  border-radius: 3%;
  box-shadow: 3px 3px 5px 5px rgba(31, 29, 29, 0.062);
}
.float-swiper-dots{   
  pointer-events: none;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.swiper-dots{   
  margin-top: 150%;
  display: flex;
}
.swiper-dots .dot.active{
  background-color: rgba(255,255,255,1);
}

.swiper-dots .dot{
  margin-top: 56rpx;
  width: 50rpx;
  height: 4rpx;
  background-color: rgba(255,255,255,0.4);
  border: none;
}