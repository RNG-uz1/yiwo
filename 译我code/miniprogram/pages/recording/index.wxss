.recording {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  align-items: center;
  background-color: #055;
}

map {
  height: 100%;
  width: 100%;
}

.map{
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.floatBtns {
  width: 100%;
  justify-content: space-around;
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  bottom: 200rpx;
}

.floatBtns .btn {
  display: flex;
  justify-content: center;
  background-color: #099A97;
  border-radius: 30rpx;
  line-height: 60rpx;
  color: #fff;
  width: 250rpx;
  height: 60rpx;
}

.pop{
  width: 100%;
  height: 400rpx;
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pop .popTitle {
  margin-bottom: 50rpx;
}

.pop .end{
  border-top: 2rpx solid rgba(0, 0, 0);
  width: 80%;
  margin-top: 20rpx;
  padding-top: 30rpx;
  display: flex;
  flex-direction:row;
  align-items: center;
  justify-content: center;
}

.end_icon{
  height: 50rpx;
  width: 50rpx;
  margin-right: 20rpx;
}

.backGround{
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(0,0,0,0.5);
}

.content {
  margin-top: 15%;
  height: 70%;
  width: 80%;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content .close {
  margin-top: 30rpx;
  width: 70rpx;
  height: 70rpx;
}

.content .currentPhoto{
  height: 85%;
  width: 100%;
}